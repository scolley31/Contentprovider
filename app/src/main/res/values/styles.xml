<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/translucent</item>
        <item name="colorPrimaryDark">@color/translucent</item>
        <item name="colorAccent">@color/purple_voyage</item>
    </style>

    <style name="ProfileOrderButton" parent="ProfileButton">
        <item name="android:background">@drawable/button_profile_order_ripple</item>
    </style>

    <style name="ProfileServiceButton" parent="ProfileButton">
        <item name="android:background">@drawable/button_profile_service_ripple</item>
    </style>

    <style name="ProfileButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/button_profile_order_ripple</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="ProfileTitle">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="DetailTitle">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/gray_646464</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailSeparation">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:background">@color/gray_cccccc</item>
    </style>

    <style name="DetailContent">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LoginDialog">
        <item name="android:windowBackground">@color/translucent_40</item>
    </style>

    <style name="Add2CartDialog">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowBackground">@color/translucent_40</item>
        <item name="android:animation">@null</item>
    </style>

    <style name="FacebookLoginButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_login_facebook_ripple</item>
    </style>

    <style name="ProgressTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/black_3f3a3a</item>
    </style>

    <style name="ProgressThemeDark" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="MessageDialog">
        <item name="android:windowBackground">@color/translucent_80</item>
    </style>

    <style name="PaymentColorTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray_cccccc</item>
        <item name="colorControlActivated">@color/black_3f3a3a</item>
        <item name="android:colorControlHighlight">@color/black_3f3a3a</item>
    </style>

    <style name="LogoTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
